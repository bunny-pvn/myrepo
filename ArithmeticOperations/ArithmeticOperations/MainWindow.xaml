<Window x:Class="ArithmeticOperations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ArithmeticOperations"
        Title="Arithmetic Operations" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" Background="Cornsilk">
            <Label Content="First Operand:" VerticalAlignment="Center"  />
            <TextBox Width="100" Text="{Binding Operand.FirstOperand, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" Background="Cornsilk">
            <Label Content="Second Operand:" VerticalAlignment="Center" />
            <TextBox Width="100" Text="{Binding Operand.SecondOperand, UpdateSourceTrigger=PropertyChanged}" Margin="10"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Background="LightCyan">
            <Button Content="Add" Command="{Binding AddCommand}" Width="75" Margin="5"/>
            <Button Content="Subtract" Command="{Binding SubtractCommand}" Width="75" Margin="5"/>
            <Button Content="Multiply" Command="{Binding MultiplyCommand}" Width="75" Margin="5"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="10">
            <Label Content="{Binding ResultText}" FontSize="16" Background="Beige" Foreground="BlueViolet"/>
        </StackPanel>
    </Grid>
</Window>
